module adder(  // performs addition, subtraction, multiplication and modulo
  input in[3], // a is 1st bit, b is 2nd bit, carry-in is 3rd bit
  output sum[0], 
  output carry[0]
  ) {

  
  always {
    sum = (in[0] ^ in[1]) ^ in[2];
    carry = (in[0] & in[1]) | ((in[0] ^ in[1]) & in[2]);
  }
}
